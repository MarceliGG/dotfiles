cmd open $$EDITOR "$f"

cmd trash %{{
  echo "Put $(echo $fx | wc -w) file(s) in trash [y/N]? "
  read ans
  if [ "$ans" = "y" ]
  then
    for file in $fx
    do
      trash "$(basename "$file")"
    done
  else
    echo "File(s) not trashed"
  fi
}}

cmd create %{{
  echo "create: "
  read ans
  case "$ans" in
    */) mkdir -p "$ans" && echo "Created dir ./$ans";;
    */*) mkdir -p "$(dirname "$ans")" && touch "$ans" && echo "Created dir and file $ans";;
    *) touch "$ans" && echo "Created file $ans";;
  esac
}}

cmd cdto %{{
  echo "cd: "
  read ans
  lf -remote "send cd \"$ans\""
}}


set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id


set hidden


map D trash
map o $xdg-open "$f"
map a create
map gc cd ~/.config
map gt cd ~/TS
map gp cd ~/Pictures
map gi cdto
map <c-w> &swww img "$f"
